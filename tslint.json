{
  "extends": ["tslint-config-airbnb", "tslint-react"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*",
      "build/*",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ]
  },
  "rules": {
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "jsx-no-lambda" : false,
    "jsx-no-multiline-js": false,
    "jsx-boolean-value": false,
    "no-console": false,
    "object-shorthand-properties-first": [{ "severity": "warning" }],
    "ter-arrow-parens": [true, "as-needed"],
    "trailing-comma": false,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords"
    ],
    "semicolon": false,
    "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
    "import-name": false,
    "increment-decrement": true,
    "quotemark": false,
    "whitespace": [
      true,
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  }
}
