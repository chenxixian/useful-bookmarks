{
  "defaultSeverity": "warning",
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015",
      "es2016", 
      "es2017"
    ],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "isolatedModules": true,
    "importHelpers": true,
  },
  "exclude": [
    "build/**/*",
    "public/**/*",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
